void _SevSeg2x1_VidDisplayDigitRight(u8 LOC_u8Digit)
{



}
void _SevSeg2x1_VidDisplayDigitLeft(u8 LOC_u8Digit)
{

}

void SevSeg2x1_VidCountUp(u8 LOC_u8Start, u8 LOC_u8End)
{
	u8 _7Seg_array[10]={Zero, One, Two, Three, Four, Five, Six, Seven, Eight, Nine};

}

void SevSeg2x1_VidCountDown(u8 LOC_u8Start, u8 LOC_u8End)
{
	u8 _7Seg_array[10]={Zero, One, Two, Three, Four, Five, Six, Seven, Eight, Nine};

}

void SevSeg2x1_VidLoading(u8 LOC_u8Speed)
{


	DIO_VidSetPortDirection(SevSEG2X1_DataPort, 0xFF);
	DIO_VidSetPinDirection(SevSEG2X1_CTRLPort, SevSEG2X1_L7SEG2X1, OUTPUT);
	DIO_VidSetPinDirection(SevSEG2X1_CTRLPort, SevSEG2X1_R7SEG2X1, OUTPUT);
	DIO
	PORTB=0x00;

	for (int j=0; j<=cycle; j++)
	{
		for (int i=0; i<4; i++)
		{
			SET_bit(PORTB, 0);
			PORTC=_7Seg_loading_array_Right[i];
			_delay_ms(150);
			PORTC = 0b11111111;
			CLR_bit(PORTB, 0);
		}
		for (int i=0; i<4; i++)
		{
			SET_bit(PORTB, 1);
			PORTC=_7Seg_loading_array_Left[i];
			_delay_ms(150);
			PORTC = 0b11111111;
			CLR_bit(PORTB, 1);
		}



	}
}
