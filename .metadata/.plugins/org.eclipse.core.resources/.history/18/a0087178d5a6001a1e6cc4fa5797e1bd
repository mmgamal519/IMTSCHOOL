#ifndef LCD_CONFIG_H_
#define LCD_CONFIG_H_

#define LCD_DataPort			PORTD		//as an address of Data port
#define LCD_CTRLPort 		PORTB		//as an address of CTRL port
#define LCD_RS_PIN 			PIN3
#define LCD_RW_PIN 			PIN4
#define LCD_Enb_PIN			PIN5

#define FunctionSet_8bit  0b00111000
#define FunctionSet_4bit  0b00111000 // not used till now

//#define LCD_MPU_Interface	      to config 4/8 bit with data port 4/8 pins

#endif /* LCD_CONFIG_H_ */
