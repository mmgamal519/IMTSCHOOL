#ifndef SevSEG2X1_CONFIG_H_
#define SevSEG2X1_CONFIG_H_

// for common Anode  set Enable=>1 and Disable =>0, for Comm Cathod set Enable=>0 and Disable =>1
#define Enable		1
#define Disable	0
// Port Config for 7segment 2x1 two using same port of data
#define SevSEG2X1_DataPort			PORTC
#define SevSEG2X1_CTRLPort 		PORTB
#define SevSEG2X1_R7SEG2X1 		PIN0
#define SevSEG2X1_L7SEG2X1 		PIN1
#define SevSeg2x1Refresh				20			//to adjust refresh rate of 7 segments



#endif /* SevSEG2X1_CONFIG_H_ */
