#include "STD_TYPES.h"
#include "BIT_MATH.h"
#include "DIO_Interface.h"
#include <util/delay.h>

#include "SevSeg2x1_Interface.h"

/*
 * main.c
 *
 *  Created on: May 15, 2020
 *      Author: MGIsmail
 */






int main (void)
{
	SevSeg2x1_VidInit();
	while (1)
	{
		SevSeg2x1_VidLoading(400);
		SevSeg2x1_VidCountUp(0,99);
		SevSeg2x1_VidCountDown(99,0);
	}
}

