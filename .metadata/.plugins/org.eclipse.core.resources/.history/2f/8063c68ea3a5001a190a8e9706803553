void 7Seg2x1_VidLoading(u8 LOC_u8Speed)
{


	DIO_ =0xFF;
	DDRB=0b00000011;
	PORTB=0x00;

	for (int j=0; j<=cycle; j++)
	{
		for (int i=0; i<4; i++)
		{
			SET_bit(PORTB, 0);
			PORTC=_7Seg_loading_array_Right[i];
			_delay_ms(150);
			PORTC = 0b11111111;
			CLR_bit(PORTB, 0);
		}
		for (int i=0; i<4; i++)
		{
			SET_bit(PORTB, 1);
			PORTC=_7Seg_loading_array_Left[i];
			_delay_ms(150);
			PORTC = 0b11111111;
			CLR_bit(PORTB, 1);
		}



	}
}
